<Window x:Class="Building_Materials.Captcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Building_Materials"
        mc:Ignorable="d"
          ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
     Title="Captcha" Height="350" Width="300">

    <Grid Visibility="Visible">
        <StackPanel Margin="10 0 0 20"
                    VerticalAlignment="Center"
                    Width="250"
                    Height="280"
                    HorizontalAlignment="Center"

                    >

            <TextBox  FontSize="28" Foreground="Red" FontStyle="Italic" Margin="20"  Name="textBox1" Background="{x:Null}" FontStretch="UltraCondensed"></TextBox>
            <TextBox Name="txbLogin" FontSize="16"  Margin="20" Background="#76e383" TextChanged="txbLogin_TextChanged" />
            <Button Content="Показать капчу"  Name="go" VerticalAlignment="Top" Width="161" Click="button1_Click" />
        </StackPanel>
    </Grid>

</Window>
